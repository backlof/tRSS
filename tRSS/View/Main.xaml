<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="tRSS.Main" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
	Title="tRSS.View"
	MinHeight="{Binding Path=View.MinHeight}"
	MinWidth="{Binding Path=View.MinWidth}"
	Height="{Binding Path=View.WindowHeight, Mode=TwoWay}"
	Width="{Binding Path=View.WindowWidth, Mode=TwoWay}">
	<DockPanel>
		<StatusBar DockPanel.Dock="Bottom">
			<StatusBarItem>
				<TextBlock Text="{Binding Path=View.Stats}" />
			</StatusBarItem>
		</StatusBar>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0">
				<GroupBox Header="Location" Padding="8">
					<StackPanel Orientation="Horizontal">
						<TextBox Width="300" Text="{Binding Path=Data.TorrentDropLocation}" VerticalContentAlignment="Center" />
						<Button Content="Browse" />
					</StackPanel>
				</GroupBox>
				<GroupBox Header="Update every" Padding="8">
					<StackPanel Orientation="Horizontal">
						<wpfTool:IntegerUpDown Width="80" Value="{Binding Path=Data.UpdateInMinutes, Mode=TwoWay}" Minimum="1" Maximum="60" />
						<Label Content="minute(s)" />
					</StackPanel>	
				</GroupBox>
			</StackPanel>
			<Grid Grid.Row="1">
				<Grid.RowDefinitions>
					<RowDefinition />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition MinWidth="{Binding Path=View.LeftColumnMinWidth}" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				
				<StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
					<Label Content="Feeds" FontWeight="Bold" />
					<ListBox SelectionMode="Single" BorderThickness="0" ItemsSource="{Binding Path=Data.Feeds}">
						<ListBox.ItemTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding Path=Title}" />
							</DataTemplate>
						</ListBox.ItemTemplate>
					</ListBox>
				</StackPanel>
				
				<DataGrid Grid.Row="0" Grid.Column="2" CanUserAddRows="False" AutoGenerateColumns="False" CanUserResizeRows="False" IsReadOnly="True" ItemsSource="{Binding Path=Data.Test.Items}">
					<DataGrid.Columns>
						<DataGridTextColumn Header="Title" Binding="{Binding Path=Title}" />
						<DataGridTextColumn Header="Date" Binding="{Binding Path=Published, Converter={StaticResource DateConverter}}" />
					</DataGrid.Columns>
				</DataGrid>
				
				<StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
					<Label Content="Filters" FontWeight="Bold" />
					<ListBox SelectionMode="Single" BorderThickness="0" ItemsSource="{Binding Path=Data.Filters}">
						<ListBox.ItemTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding Path=Title}" />
							</DataTemplate>
						</ListBox.ItemTemplate>
					</ListBox>
				</StackPanel>
				
				<StackPanel Grid.Row="1" Grid.Column="2" Margin="10">
					<GroupBox Header="Item Three" Padding="8">
						<Grid >
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>
							
							<Label Content="Filter" Grid.Column="0" Grid.Row="0" />
							<Label Content="Feed" Grid.Column="1" Grid.Row="0" />
							
							<TextBox Text="asdasdasd" Grid.Column="0" Grid.Row="1" />
							<ComboBox Grid.Column="1" Grid.Row="1" ></ComboBox>
							
							<Label Content="Include" Grid.Column="0" Grid.Row="2" />
							<TextBox Text="asdasdasd" Grid.ColumnSpan="2" Grid.Row="3" />
							
							<Label Content="Exclude" Grid.Column="0" Grid.Row="4" />
							<TextBox Text="asdasdasd" Grid.ColumnSpan="2" Grid.Row="5" />
						
							<GroupBox Padding="8" Grid.Row="6" Grid.ColumnSpan="2">
								<GroupBox.Header>
									<CheckBox x:Name="TVCheckBox" Content="TV Show" />
								</GroupBox.Header>
								<StackPanel IsEnabled="{Binding ElementName=TVCheckBox, Path=IsChecked}" Orientation="Horizontal">
									<Label Content="Season" />
									<wpfTool:IntegerUpDown Value="{Binding Path=Data.UpdateInMinutes, Mode=TwoWay}" Minimum="1" />
									<Label Content="Episode" />
									<wpfTool:IntegerUpDown Value="{Binding Path=Data.UpdateInMinutes, Mode=TwoWay}" Minimum="1" />
								</StackPanel>
							</GroupBox>
						</Grid>
					</GroupBox>
				</StackPanel>
				
				
				<GridSplitter HorizontalAlignment="Stretch" Grid.Column="1" Grid.RowSpan="3" Width="1" />
				<!--<GridSplitter HorizontalAlignment="Stretch" Grid.Row="1" Grid.ColumnSpan="3" Height="1" />-->
			</Grid>
		</Grid>
	</DockPanel>
</Window>