<Window x:Class="tRSS.Main"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="tRSS" Height="300" Width="300"
	>
	<Grid>
		<DataGrid CanUserAddRows="False" AutoGenerateColumns="False" ColumnWidth="Auto" IsReadOnly="True" ItemsSource="{Binding Path=Data.Test.Items}">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Title" Binding="{Binding Path=Title}" />
				<DataGridTextColumn Header="Date" Binding="{Binding Path=Published, Converter={StaticResource DateConverter}}" />
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</Window>